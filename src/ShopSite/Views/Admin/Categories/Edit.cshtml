@model ShopSite.ViewModels.Admin.CategoryEdit

@{
    ViewBag.Title = Model.Name;
}

<h3>Edit @Model.Name</h3>

<form class="form-horizontal" asp-action="CategoryEdit" method="post">
    <div class="form-group">
        <label class="col-sm-2 control-label">Category Name</label>
        <div class="col-sm-10">
            <input name="name" asp-for="Name" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
            <input name="description" asp-for="Description" rows="3" class="form-control" />
        </div>

    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Parent Category</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="ParentId" asp-items="@Model.Categories">
                <option value="-1">Top</option>
            </select>
            <span asp-validation-for="ParentId"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" value="Save" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span> Save</button>
        </div>
    </div>
</form>