@model ShopSite.ViewModels.Attribute.AttributeListViewModel

@{
    ViewBag.Title = "Attributes";
}

<div class="row">
    <div class="col-md-6">
        <h2>@ViewBag.Title List</h2>
    </div>
    <div class="col-md-4 text-right">
        <a class="btn btn-primary" asp-action="AttributeCreate"><span class="glyphicon glyphicon-plus"></span> Create Attribute</a>
    </div>
</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Group</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductAttributes)
        {
            <tr>

                <td>@item.Name</td>
                <td>@item.Group.Name</td>
                <td>
                    <a title="Edit" class="btn btn-primary" asp-action="AttributeEdit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a title="Remove" class="btn btn-danger delete" asp-action="AttributeRemove" asp-route-id="@item.Id"><span class="glyphicon glyphicon-remove"></span></a>
                </td>

            </tr>
        }
    </tbody>
</table>