@model ShopSite.ViewModels.Admin.AttributeEdit

@{
    ViewBag.Title = "Create";
}


<form class="form-horizontal" asp-action="AttributeCreate" method="post">

    <div class="form-group">
        <label class="col-sm-2 control-label">Attribute Name</label>
        <div class="col-sm-9">
            <input asp-for="Name" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Group</label>
        <div class="col-sm-9">

            @foreach (var item in Model.Groups)
            {
                <label><input type="radio" asp-for="GroupId" value="@item.Value" /> @item.Text</label><br />
            }
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" value="Save" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span> Create</button>
        </div>
    </div>
</form>