@model ShopSite.Orders.ViewModels.AddToCartResultVM

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">@Localizer["The product has been added to your cart"]</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-3">
            <img class="img-responsive" src="@if (!string.IsNullOrEmpty(Model.ProductImage)) { Model.ProductImage.ToString(); } else { @("/images/cheese.jpg"); }">
        </div>
        <div class="col-md-6">
            <h4>@Model.ProductName</h4>
        </div>
        <div class="col-md-3">
            @Model.Quantity x @Model.ProductPrice.ToString("C", CultureInfo.CreateSpecificCulture("uk-Ua"))
        </div>
    </div>
    <div class="row">
        <div class="col-md-7">
            @Localizer["You have"] <span class="cart-item-count">@Model.CartItemCount</span> @Localizer["product(s) in your cart"]
        </div>
        <div class="col-md-5">
            @Localizer["Cart subtotal"]: @Model.CartAmount.ToString()
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">@Localizer["Continue shopping"]</button>
    <a href="~/cart" type="button" class="btn btn-default">@Localizer["View cart"]</a>
</div>
