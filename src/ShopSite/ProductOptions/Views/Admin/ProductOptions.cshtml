@using ShopSite.ProductOptions.Models
@model ShopSite.ProductOptions.ViewModels.ProductOptionListVm


@{
    ViewBag.Title = "Product List";
}

<div class="row">
    <div class="col-md-6">
        <h2>Product Option List</h2>
    </div>
    <div class="col-md-4 text-right">
        <a class="btn btn-primary disabled" asp-action="Create" ><span class="glyphicon glyphicon-plus"></span> Create Option</a>
    </div>
</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Options)
        {
            <tr>

                <td>@item.Name</td>
                <td>
                    <a title="Edit" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a title="Remove" class="btn btn-danger delete" asp-action="Remove" asp-route-id="@item.Id"><span class="glyphicon glyphicon-remove"></span></a>
                </td>

            </tr>
        }
    </tbody>
</table>